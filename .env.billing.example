# Kyozo Billing System Environment Variables
# Copy this file to .env and fill in your actual values

# Stripe Configuration
# Get these from your Stripe Dashboard (https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_51ABC123_your_stripe_secret_key_here
STRIPE_PUBLIC_KEY=pk_test_51ABC123_your_stripe_public_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs
# Create products and prices in Stripe Dashboard, then copy the price IDs here
STRIPE_PRO_PRICE_ID=price_1ABC123_pro_monthly_price_id
STRIPE_TEAM_PRICE_ID=price_1ABC123_team_monthly_price_id  
STRIPE_ENTERPRISE_PRICE_ID=price_1ABC123_enterprise_monthly_price_id

# License Security
# Generate a secure random string for signing licenses
# You can use: openssl rand -hex 32
LICENSE_SIGNING_KEY=your_very_secure_license_signing_key_here_64_chars_minimum

# Optional: Custom Stripe Configuration
# STRIPE_API_VERSION=2023-10-16
# STRIPE_CONNECT_CLIENT_ID=ca_abc123

# Development Settings
# Set to true to use Stripe test mode
STRIPE_TEST_MODE=true

# Webhook Testing (for local development)
# If using Stripe CLI for webhook testing, uncomment and set:
# STRIPE_CLI_WEBHOOK_SECRET=whsec_your_cli_webhook_secret

# Billing Feature Flags
BILLING_ENFORCE_LIMITS=true
BILLING_TRACK_USAGE=true
BILLING_DEFAULT_TRIAL_DAYS=14

# Database (if different from main app)
# DATABASE_URL=ecto://username:password@localhost/kyozo_dev

# Application URLs (for Stripe checkout redirects)
APP_BASE_URL=http://localhost:4000
BILLING_SUCCESS_URL=http://localhost:4000/billing/success
BILLING_CANCEL_URL=http://localhost:4000/billing/cancel
BILLING_PORTAL_URL=http://localhost:4000/billing/portal

# Email Configuration (for billing notifications)
# MAILGUN_API_KEY=your_mailgun_key
# MAILGUN_DOMAIN=mg.yourdomain.com
# FROM_EMAIL=billing@yourdomain.com

# Monitoring and Analytics
# MIXPANEL_TOKEN=your_mixpanel_token
# SEGMENT_WRITE_KEY=your_segment_key